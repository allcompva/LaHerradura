                        DDLMedioPago.DataBind();
                        fillDeuda(lst);

                        DAL.BILLETERA objBilletera = DAL.BILLETERA.getByPk(lst[0].NRO_CTA);
                        if (objBilletera.SALDO == 0)
                        {
                            divSaldoBilletera.Visible = false;
                        }
